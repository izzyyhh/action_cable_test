<h1>Hello <%= current_user.username %> </h1>

<div class='container-fluid'>

  <div class='row'>
    <div class='col-3'>
      <%= render 'form', room: Room.new %>
    <hr>

    <% @rooms.each do |room| %>
      <%= link_to room do %>
      <div class='card'>
        <div class='card-body'>
            <%= room.name %>
        </div>
      </div>
      <% end %>
    <% end %>
    </div>
  </div>
<br>
<br>
  <% if @room.present? %>
  <p><%= @room.name %></p>
  <% @room.messages.each do |message| %>
    <p><%= message.content %> - <%= message.user.username %></p>
  <% end %>
  <div>
    <%= render 'messages/form', message: Message.new %>
  </div>
  <% end %>

</div>



